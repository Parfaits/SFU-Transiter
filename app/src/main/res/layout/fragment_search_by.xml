<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.search_by.SearchBy">


    <TextView
        android:id="@+id/txtSearchByTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="@string/search_by"
        android:fontFamily="@font/maru_bold"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FF5555"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_bus_stop"
        android:layout_width="285dp"
        android:layout_height="241dp"
        android:layout_marginTop="108dp"
        android:drawableTop="@drawable/bus_stop_icon_state"
        android:background="@drawable/button_bus"
        android:fontFamily="@font/maru_regular"
        android:paddingTop="30dp"
        android:text="STOPS"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSearchByTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>