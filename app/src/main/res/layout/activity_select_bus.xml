<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectBus">

    <TextView
        android:id="@+id/txtSearchBusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Select Bus"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn143"
        android:layout_width="170dp"
        android:layout_height="240dp"
        android:layout_marginStart="16dp"
        android:drawableTop="@drawable/bus_icon_state"
        android:paddingTop="10dp"
        android:text="143"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="149dp" />

    <Button
        android:id="@+id/btn144"
        android:layout_width="170dp"
        android:layout_height="240dp"
        android:drawableTop="@drawable/bus_icon_state"
        android:paddingTop="10dp"
        android:text="144"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn143"
        tools:layout_editor_absoluteY="149dp" />

    <Button
        android:id="@+id/btnR5"
        android:layout_width="170dp"
        android:layout_height="240dp"
        android:layout_marginTop="17dp"
        android:drawableTop="@drawable/bus_icon_state"
        android:paddingTop="10dp"
        android:text="R5"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toEndOf="@+id/btn145"
        app:layout_constraintTop_toBottomOf="@+id/btn144"
        app:layout_constraintVertical_bias="0.141" />

    <Button
        android:id="@+id/btn145"
        android:layout_width="170dp"
        android:layout_height="240dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:drawableTop="@drawable/bus_icon_state"
        android:paddingTop="10dp"
        android:text="145"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn143"
        app:layout_constraintVertical_bias="0.141" />
</androidx.constraintlayout.widget.ConstraintLayout>